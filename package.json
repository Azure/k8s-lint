{
   "name": "k8s-lint-action",
   "version": "0.0.0",
   "private": true,
   "main": "lib/run.js",
   "scripts": {
      "prebuild": "npm i @vercel/ncc",
      "build": "ncc build src/run.ts -o lib",
      "test": "jest",
      "test-coverage": "jest --coverage",
      "format": "prettier --write .",
      "format-check": "prettier --check .",
      "prepare": "husky"
   },
   "keywords": [
      "actions"
   ],
   "author": "GitHub",
   "license": "MIT",
   "dependencies": {
      "@actions/core": "^1.11.1",
      "@actions/exec": "^1.1.1",
      "@actions/tool-cache": "2.0.2",
      "husky": "^9.1.7"
   },
   "devDependencies": {
      "@types/jest": "^30.0.0",
      "@types/node": "^24.0.13",
      "@vercel/ncc": "^0.38.3",
      "jest": "^30.0.4",
      "prettier": "^3.6.2",
      "ts-jest": "^29.4.0",
      "typescript": "5.8.3"
   }
}
