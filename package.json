{
  "name": "k8s-lint-action",
  "description": "GitHub Action to validate Kubernetes manifest files.",
  "version": "0.0.0",
  "author": "Siddhesh Mhadnak <siddhesh.mhadnak@outlook.com>",
  "private": true,
  "homepage": "https://github.com/sid-maddy/k8s-lint",
  "type": "module",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sid-maddy/k8s-lint.git"
  },
  "bugs": {
    "url": "https://github.com/sid-maddy/k8s-lint/issues"
  },
  "keywords": [
    "actions"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint . -c ./.eslintrc.yml",
    "package": "ncc build src/run.ts --minify --license licenses.txt --target es2022",
    "package:watch": "npm run package -- --watch",
    "test": "jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/exec": "1.1.1",
    "@actions/tool-cache": "2.0.1"
  },
  "devDependencies": {
    "@types/jest": "29.5.7",
    "@types/node": "20.8.10",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "@vercel/ncc": "0.38.1",
    "eslint": "8.52.0",
    "eslint-plugin-jest": "27.6.0",
    "jest": "29.7.0",
    "prettier": "3.0.3",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "packageManager": "npm@10.2.3+sha256.9316bf3da0a0ec6b81eb83784539098a0e802246d8269c45797a87a6a82a62bf"
}
