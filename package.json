   },
   "devDependencies": {
      "@types/jest": "^29.5.14",
      "@types/node": "^22.8.7",
      "@vercel/ncc": "^0.38.2",
      "jest": "^29.5.12",
      "prettier": "^3.3.3",
      "ts-jest": "^29.2.5",
      "typescript": "5.6.3"
